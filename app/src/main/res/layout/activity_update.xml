<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.carlossant47.testingfunctions.UpdateActivity">

    <RelativeLayout
        android:id="@+id/pic"
        android:layout_below="@id/pic2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Actualizacion Disponible"
                android:textColor="@color/colorAccent"
                android:textSize="19sp" />

            <ProgressBar
                android:id="@+id/prFile"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="19dp"
                android:max="100"
                android:progress="0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:id="@+id/lbVersion"
                android:text="Numero de version 1.7"
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Notas de la version"
                android:textColor="#000"
                android:textSize="14dp" />

                <TextView
                    android:id="@+id/lbNotas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars = "vertical"
                    android:text="xD" />


        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/pic2"
        android:background="#fff3f3f3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Nota todas las actualizaciones son de caracter obligatorio" />

            <android.support.v7.widget.AppCompatButton
                android:layout_width="match_parent"
                android:id="@+id/btnDownload"
                android:layout_height="wrap_content"
                android:text="Descargar"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:background="@drawable/oval_button"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:background="@color/colorAccent"
                android:text="Descargar"


                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
