<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:focusable="true"
    style="@style/AppTheme.NoActionBar" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:id="@+id/btnList"
        android:layout_marginRight="10dp"
        android:background="#4e86a3"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:stretchColumns="2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView

                    android:layout_width="5dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:id="@+id/lbescuela"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:text="Universidad Politecnica de Sinaloa"
                     />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/lbzona"
            android:textSize="13dp"
            android:text="Zona Sur"
            android:layout_height="wrap_content" />
        <TextView
        android:layout_width="match_parent"
        android:textColor="#fff"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="13dp"
        android:layout_marginRight="7dp" android:id="@+id/lbfecha"
        android:text="Supervision Hoy 01 de Enero"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtstatus"
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:gravity="right"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="17dp"
            android:layout_marginRight="10dp"
            android:text="PENDIENTE"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>