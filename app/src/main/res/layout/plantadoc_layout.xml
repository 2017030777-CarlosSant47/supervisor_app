<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <TextView
        android:visibility="gone"

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:maxLength="4"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="17dp"
        android:text="@string/programa"
        android:textColor="#000"
        />
    <RadioGroup
        android:visibility="gone"
        android:id="@+id/RG_Programa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/RB_Trimestral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/trime" />
        <RadioButton
            android:id="@+id/RB_Cuatrimestrak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cuatri" />

        <RadioButton
            android:id="@+id/RB_Semestral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/semestral" />

    </RadioGroup>
    <View
        android:visibility="gone"
        android:background="#515050"
        android:layout_width = "fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="17dp"
        android:text="@string/modalidad"
        android:textColor="#000"
        />

    <RadioGroup
        android:visibility="gone"
        android:id="@+id/RG_Modalidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rbescola"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/escolarizada" />
        <RadioButton
            android:id="@+id/rbnecolarizada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nescolarizada" />

        <RadioButton
            android:id="@+id/rbmixta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mixta" />

    </RadioGroup>
    <View
        android:visibility="gone"
        android:background="#515050"
        android:layout_width = "fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow>
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
                <EditText
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:maxLength="4"
                    android:id="@+id/txtDoAutoriza"
                    android:layout_height="wrap_content"
                    android:hint="Docentes Registrados"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
                <EditText
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:id="@+id/txtSAutorizado"
                    android:maxLength="4"

                    android:layout_height="wrap_content"
                    android:hint="Docentes sin registrar"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/txtAutorizado"
                android:textColor="#000"
                android:text="Total de Docentes"/>

        </TableRow>
    </TableLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Grados"
        android:textColor="#000"
        android:textSize="17dp" />
    <TableLayout
        android:layout_width="match_parent"
        android:stretchColumns="*"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/txtTSU_PD"
                android:layout_width="0dp"
                android:inputType="number"
                android:maxLength="4"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="TSU" />
            <EditText
                android:id="@+id/txtESP_PD"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="4"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:hint="ESP"
                android:textSize="17dp" />
            <EditText
                android:id="@+id/txtLIC_PD"
                android:layout_width="0dp"
                android:maxLength="4"
                android:inputType="number"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="LIC" />

            <EditText
                android:id="@+id/txtMTR_PD"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="4"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:hint="MTR"
                android:textSize="17dp" />
            <EditText
                android:id="@+id/txtDOCT_PD"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLength="4"
                android:layout_height="wrap_content"
                android:hint="DOCT"
                android:textSize="17dp" />
        </TableRow>
        <TextView
            android:id="@+id/txtViwTotal_PD"
            android:layout_width="match_parent"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17dp" />
    </TableLayout>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:text="Curriculum" />

    <RadioGroup
        android:id="@+id/rbbcur"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/rbcursi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Si" />

        <RadioButton
            android:id="@+id/rbcurno"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="No" />

    </RadioGroup>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:text="Copia Acta Nacimiento" />

    <RadioGroup
        android:id="@+id/rbbacta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rbactasi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Si" />

        <RadioButton
            android:id="@+id/rbactano"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No" />

    </RadioGroup>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:text="Nacionalidad" />

    <RadioGroup
        android:id="@+id/rbbnac"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/rbnacsi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="MEX" />

        <RadioButton
            android:id="@+id/rbnacno"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="EXT" />

    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profesiograma"
        android:id="@+id/btnpdf"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:text="Copia Título" />

    <RadioGroup

        android:id="@+id/rbbtil"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/rbtilsi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Si" />

        <RadioButton
            android:id="@+id/rbtilno"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="No" />

    </RadioGroup>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:text="Cédula" />

    <RadioGroup
        android:id="@+id/rbbceld"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/rbceldsi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Si" />

        <RadioButton
            android:id="@+id/rbceldno"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="No" />

    </RadioGroup>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:text="Diplomas/Constancias" />

    <RadioGroup
        android:id="@+id/rbbcon"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/rbconsi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Si" />

        <RadioButton
            android:id="@+id/rbconno"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="No" />

    </RadioGroup>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:text="Cumple con el perfil de la materia impartida" />

    <RadioGroup
        android:id="@+id/rbbcumple"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/rbcumplesi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Si" />

        <RadioButton
            android:id="@+id/rbcumpleno"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="No" />

    </RadioGroup>
    <EditText
        android:layout_width="match_parent"
        android:inputType="number"
        android:visibility="gone"
        android:id="@+id/txtCumPerMateria"
        android:layout_height="wrap_content"
        android:hint="Total"/>
    <View
        android:background="#515050"
        android:layout_width = "fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="17dp"
        android:layout_marginBottom="10dp"
        android:text="Sistema Nacional de Investigación"
        android:textColor="#000"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:text="Pertenecen al Sistema Nacional de Investigación" />

    <RadioGroup
        android:id="@+id/rbbinve"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/rbinvesi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Si" />

        <RadioButton
            android:id="@+id/rbinveno"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="No" />


    </RadioGroup>

    <EditText
        android:id="@+id/txtanoingSi"
        android:inputType="number"
        android:enabled="false"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Año Ingreso" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:text="Nivel"/>

    <RadioGroup
        android:enabled="false"
        android:id="@+id/RG_Nivel"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/RB_Desable"
            android:layout_width="0dp"

            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Perfil Deseable" />

        <RadioButton
            android:id="@+id/RB_Lvl1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Nivel 1" />

        <RadioButton
            android:id="@+id/RB_Lvl2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Nivel 2" />
        <RadioButton
            android:id="@+id/RB_Lvl3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Nivel 3" />

    </RadioGroup>

    <View
        android:background="#515050"
        android:layout_width = "fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="17dp"
        android:layout_marginBottom="10dp"
        android:text="Sistema Sinaloense de Investigación y Tecnologia"
        android:textColor="#000"
        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginBottom="15dp"
        android:text="Pertenece al Sistema Sinaloense de Investigación y Tecnología"/>

    <RadioGroup
        android:id="@+id/rbbssit"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/rbssSI"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Si" />

        <RadioButton
            android:id="@+id/rbSSNo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="No" />
    </RadioGroup>

    <RadioGroup
        android:enabled="false"
        android:id="@+id/RGB_NivelISS"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/RBS_LV1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Tecnólogo" />

        <RadioButton
            android:id="@+id/RBS_LV2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Investigador asociado" />
        <RadioButton
            android:id="@+id/RBS_LV3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Investigador" />

    </RadioGroup>

    <TableLayout
        android:layout_width="match_parent"
        android:stretchColumns="*"
        android:layout_height="wrap_content">
        <TableRow>
            <EditText
                android:id="@+id/txtanoInSSI"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Año de Ingreso"
                android:inputType="date"
                />

            <Button
                android:id="@+id/btnanoInSSI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="Fecha"
                />

        </TableRow>
    </TableLayout>


    <View
        android:background="#515050"
        android:layout_width = "fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnComtariosAntes"
            android:text="Comentarios visita anterior"/>
        <EditText
            android:layout_marginTop="10dp"
            android:maxLength="32000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sugerencias de Mejora"
            android:id="@+id/txtsuger"
            android:inputType="textMultiLine"
            />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/btnver2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar 1 de "
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:visibility="visible"
        android:layout_marginBottom="80dp"
        />



</LinearLayout>